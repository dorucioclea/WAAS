---
export interface Props {
  isFallback?: boolean;
}

const { isFallback } = Astro.props;

// TODO: Replace this with actual fetch to backend
const tmp_fakeFetch = async () => {
  await new Promise((resolve) => setTimeout(resolve, 2500));
  return 32025;
};

const timeSaved = isFallback
  ? '---'
  : new Intl.NumberFormat('nb-NO').format(await tmp_fakeFetch());
---

<p>{timeSaved} hours saved so you can do something else</p>

<style>
  p {
    color: #fff;
    font-weight: bold;
    font-size: 2.5rem;
    text-align: center;
    text-wrap: balance;
    max-inline-size: 24ch;
    /* 8px margin left and right */
    margin: 0 8px;
  }
</style>
